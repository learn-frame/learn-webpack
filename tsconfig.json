{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@containers*": ["./src/containers/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
